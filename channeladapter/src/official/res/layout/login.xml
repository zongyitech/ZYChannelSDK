<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="263dp"
    android:layout_height="154dp"
    android:background="@drawable/background">
    <View
        android:id="@+id/title"
        android:layout_width="30.5dp"
        android:layout_height="14dp"
        android:background="@drawable/login"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <View
        android:layout_width="152.5dp"
        android:layout_height="6.5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_small_text" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp">


        <Button
            android:id="@+id/qq_login_button"
            android:layout_width="182dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:background="@drawable/blue_button"
            android:stateListAnimator="@null"
            />

        <View
            android:layout_width="38dp"
            android:layout_height="15.5dp"
            android:layout_gravity="center"
            android:background="@drawable/qq_login"
            />
    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="70dp">

        <Button
            android:id="@+id/wechat_login_button"
            android:layout_width="182dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:background="@drawable/green_button"
            android:stateListAnimator="@null"
            />
        <View
            android:layout_width="43dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@drawable/wechat"
            />
    </FrameLayout>

    <Button
        android:id="@+id/close_button"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/close"
        />

</RelativeLayout>
